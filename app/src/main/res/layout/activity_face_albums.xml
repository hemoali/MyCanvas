<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/top_bar_selector"
            android:clickable="true"
            android:onClick="goBack"
            android:padding="5dp"
            android:src="@drawable/back_arrow"/>

        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="#9ba7a7"
            />

        <TextView
            android:id="@+id/top_bar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#006666"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="Pick Album"
            android:textColor="#ffffff"
            android:textSize="19sp"/>


    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/pick_type_background"
                    android:padding="10dp"
                    tools:context="graphagenic.com.mycanvas.ui.InstaPhotos">
x
        <ListView
            android:id="@+id/images_list"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#73ffffff"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:indeterminate="true"
            android:padding="50dp"/>

    </RelativeLayout>
</LinearLayout>